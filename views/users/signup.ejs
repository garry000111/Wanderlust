<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
  <div class="col-6 offset-3">SignUp on WanderLust</div>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          placeholder="enter username"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          type="email"
          placeholder="enter email"
          class="form-control"
          required
        ></input>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          type="password"
          placeholder="enter password"
          class="form-control"
          required
        ></input>
      </div>

      <button style="background-color: green; color: aliceblue; border-radius: 1cm;">SignUp</button>

      <br>
      <br>
      <br>
      <br>
      <br>
      <br>
      <br>

    </form>
  </div>
</div>
